    {
      "name": "sebaks",
      "email": "d.kirillof@gmail.com"
    }
  ],
  "require": {
    "php": ">=5.5"
  },
  "require-dev" : {
    "phpunit/phpunit": "^4.8",
    "squizlabs/php_codesniffer": "^2.3"
  },
  "autoload": {
    "psr-4": {
